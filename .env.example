# Environment variables for md2wechat application
# Copy this file to .env and fill in your actual values

# Flask Configuration
FLASK_ENV=production
FLASK_DEBUG=0

# WeChat API Configuration
# Get these from your WeChat Official Account settings
WECHAT_APPID=your_wechat_app_id_here
WECHAT_SECRET=your_wechat_app_secret_here

# Optional: Default CSS theme
DEFAULT_CSS_THEME=chinese_news_extracted.css

# Optional: Server configuration
HOST=0.0.0.0
PORT=5002

# Optional: Logging level
LOG_LEVEL=INFO